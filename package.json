{
  "name": "meteor-react-testing",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "lint": "eslint .",
    "pretest": "npm run lint --silent",
    "test": "mocha --compilers js:babel-register --recursive imports/**/*.test.js imports/**/*.test.jsx",
    "watch": "mocha --compilers js:babel-register --recursive imports/**/*.test.js imports/**/*.test.jsx --watch  --watch-extensions js,jsx",
    "chimp": "./node_modules/.bin/chimp --ddp=http://localhost:3000 --watch --mocha --path=tests"
  },
  "dependencies": {
    "autoprefixer": "^6.4.1",
    "bcrypt": "^0.8.7",
    "classnames": "^2.2.5",
    "react": "^15.3.1",
    "react-addons-css-transition-group": "^15.3.1",
    "react-addons-pure-render-mixin": "^15.3.1",
    "react-addons-test-utils": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-redux": "^4.4.5",
    "react-router": "^2.7.0",
    "react-router-redux": "^4.0.5",
    "redux": "^3.6.0",
    "redux-form": "^6.0.2",
    "redux-thunk": "^2.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.14.0",
    "chai": "^3.5.0",
    "chai-subset": "^1.3.0",
    "enzyme": "^2.4.1",
    "eslint": "^3.4.0",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-import-resolver-meteor": "^0.3.3",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-jsx-a11y": "^2.2.1",
    "eslint-plugin-meteor": "^4.0.0",
    "eslint-plugin-react": "^6.2.0",
    "faker": "^3.1.0",
    "meteor-node-stubs": "~0.2.0",
    "expect.js": "^0.3.1",
    "faker": "^3.1.0",
    "jsdom": "9.5.0",
    "jsdom-global": "2.1.0",
    "meteor-node-stubs": "^0.2.3",
    "mocha": "^3.0.2",
    "react-addons-test-utils": "^15.3.1",
    "redux-mock-store": "^1.1.4",
    "sinon": "^1.17.5",
    "testdouble": "^1.6.1"
  },
  "eslintConfig": {
    "env": {
      "meteor": true,
      "node": true,
      "browser": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "allowImportExportEverywhere": true
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended"
    ],
    "rules": {
      "meteor/eventmap-params": [
        2,
        {
          "eventParamName": "event",
          "templateInstanceParamName": "instance"
        }
      ],
      "meteor/template-names": [
        0
      ],
      "import/no-extraneous-dependencies": "off"
    },
    "settings": {
      "import/resolver": "meteor"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "browsers": [
          "last 2 versions"
        ]
      }
    }
  }
}
